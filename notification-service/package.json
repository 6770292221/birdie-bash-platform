{
  "name": "notification-microservice",
  "version": "1.0.0",
  "description": "Consumes events.notification from RabbitMQ and sends email/sms/line; logs history to MongoDB; Swagger-enabled.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "worker": "ts-node src/worker/notificationWorker.ts",
    "build:worker": "tsc && node dist/worker/notificationWorker.js",
    "start:api": "node dist/server.js",
    "start:worker": "node dist/worker/notificationWorker.js"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "axios": "^1.12.2",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "mongoose": "^8.18.2",
    "nodemailer": "^6.10.1",
    "pino": "^9.11.0",
    "pino-pretty": "^11.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.9.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^6.4.19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
