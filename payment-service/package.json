{
  "name": "birdie-payment-service",
  "version": "1.0.0",
  "description": "Payment Management Service for Birdie Bash Platform",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "grpc:dev": "nodemon --exec ts-node src/grpcServer.ts",
    "proto:generate": "npx proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/generated/ proto/*.proto",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:setup": "prisma generate && prisma migrate dev --name init"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.5",
    "@grpc/proto-loader": "^0.7.9",
    "@prisma/client": "^5.3.1",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "promptpay-qr": "^0.5.0",
    "qrcode-terminal": "^0.12.0",
    "terminal-image": "^4.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/uuid": "^9.0.4",
    "nodemon": "^3.0.1",
    "prisma": "^5.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
